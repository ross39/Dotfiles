{
  "languageserver": {
    "metals": {
      "command": "metals-vim",
      "rootPatterns": ["build.sbt"],
      "filetypes": ["scala", "sbt"]
    }
    "coc-pyright": {
      "command": "pyright-langserver",
      "pyright.enable": true,
      "filetypes": ["python"],
      "rootPatterns": ["pyproject.toml", "setup.py", "setup.cfg", "requirements.txt", ".git"]
    }
 
}
